<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
    http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         id="WebApp_ID" version="3.1">
    <servlet>
        <servlet-name>userList</servlet-name>
        <servlet-class>web.ShowUser</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>userList</servlet-name>
        <url-pattern>/list_all</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>insertUser</servlet-name>
        <servlet-class>web.ShowUser</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>insertUser</servlet-name>
        <url-pattern>/insert</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>deleteUser</servlet-name>
        <servlet-class>web.ShowUser</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>deleteUser</servlet-name>
        <url-pattern>/delete</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>editUser</servlet-name>
        <servlet-class>web.ShowUser</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>editUser</servlet-name>
        <url-pattern>/edit</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>updateUser</servlet-name>
        <servlet-class>web.ShowUser</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>updateUser</servlet-name>
        <url-pattern>/update</url-pattern>
    </servlet-mapping>

    <servlet>
    <servlet-name>registerUser</servlet-name>
    <servlet-class>web.ShowUser</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>registerUser</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>confirmUser</servlet-name>
        <servlet-class>web.ShowUser</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>confirmUser</servlet-name>
        <url-pattern>/confirm</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>loginUser</servlet-name>
        <servlet-class>web.ShowUser</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>loginUser</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>



 <error-page>
     <exception-type>java.lang.Exception</exception-type>
     <location>/erroPage.jsp</location>
 </error-page>



    
</web-app>